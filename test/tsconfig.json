{
  "compilerOptions": {
    "baseUrl": "./", // Lets you set a base directory to resolve non-absolute module names.
    "outDir": "./dist",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@/*": ["../src/*"],
      "#/*": ["*"]
    },
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "./**/*"]
}